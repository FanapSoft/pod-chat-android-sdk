<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewStateChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State" />

        <EditText
            android:id="@+id/editTextToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="new token"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonConnect"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/connect" />

            <Button
                android:id="@+id/buttonToken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="setToken" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_videorecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uploadVideo"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="598dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tests" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinnerSecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinnerThird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/buttonFileChoose"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChooseImage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextThread"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="0.5"
                android:ems="10"
                android:hint="Thread id"
                android:inputType="textPersonName" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="SetThreadId"
                android:text="Set Thread ID" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ems="10"
                android:hint="Enter your message here"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/buttonSendMessage"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="sendMessage"
                android:text="Send message!" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageMap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorLightGrey"
        android:visibility="gone"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="605dp" />


    <Button
        android:id="@+id/buttonChooseFile"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:onClick="ChooseFile"
        android:text="ChooseFile"
        android:visibility="gone"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="307dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteY="733dp" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is 100"
        android:visibility="gone"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="451dp" />


    <Button
        android:id="@+id/buttonUploadImageProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload image Progress"
        android:textSize="12sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/buttonUploadFileProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload file Progress"
        android:textSize="12sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="553dp" />

    <TextView
        android:id="@+id/percentageFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is 0"
        android:visibility="gone"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="568dp" />

</android.support.constraint.ConstraintLayout>
